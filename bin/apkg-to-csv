#!/usr/bin/env ruby

require 'sqlite3'
require 'zip'
require 'tempfile'
require_relative '../lib/apkg_to_csv'

filename = ARGV[0]

unless filename
  puts 'Filename required'
  exit 1
end

file_written = false
tempfile = Tempfile.new('db', binmode: true)

Zip::File.open(filename) do |zip_file|
  zip_file.each do |entry|
    if entry.name == 'collection.anki21b'
      puts 'Please export with "Support older Anki versions" checked'
      break
    end
    next unless entry.name == 'collection.anki2' || entry.name == 'collection.anki21'

    tempfile.write(entry.get_input_stream.read)
    file_written = true
    break
  end
end

unless file_written
  puts 'Could not extract zip file correctly'
  exit 1
end

db = SQLite3::Database.new(tempfile.path)
csv = ApkgToCsv.csv(db).csv

db.close
tempfile.unlink

puts csv
